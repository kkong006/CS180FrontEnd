<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="teamawesome.cs180frontend">

    <!-- To auto-complete the email text field in the login form with the userRespBundle's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- retrofit permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Misc.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.LoginActivity"
            android:animateLayoutChanges="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        <activity
            android:name=".Activities.SearchActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity
            android:name=".Activities.MyReviewsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity
            android:name=".Activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity
            android:name=".Activities.SearchResultsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity
            android:name=".Activities.WriteReviewActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity
            android:name=".Activities.ReadReviewActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activities.SearchResultsActivity"/>
        <activity android:name=".Activities.SearchProfessorActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activities.MainActivity"/>
        <activity android:name=".Activities.SearchProfessorResultsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".Activities.SearchProfessorActivity"/>
    </application>

</manifest>