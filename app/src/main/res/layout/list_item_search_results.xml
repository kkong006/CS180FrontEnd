<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:contentPadding="5dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardPreventCornerOverlap="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <!--ClassBundle and Rating-->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1">

                        <!--ClassBundle-->
                        <TextView
                            android:id="@+id/result_class_tv"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="left"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <!--Rating-->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:weightSum="5">

                            <com.joanzapata.iconify.widget.IconTextView
                                android:id="@+id/result_rate_1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/rating_icon" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:id="@+id/result_rate_2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/rating_icon" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:id="@+id/result_rate_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/rating_icon" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:id="@+id/result_rate_4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/rating_icon" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:id="@+id/result_rate_5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginRight="2dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="1"
                                android:text="@string/rating_icon" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--Review Date-->
                    <TextView
                        android:id="@+id/result_date_tv"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="right" />

                </LinearLayout>

                <!--Review Contents-->
                <TextView
                    android:id="@+id/result_review_tv"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />

            </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

