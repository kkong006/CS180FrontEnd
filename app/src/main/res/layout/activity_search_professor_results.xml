<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_search_professor_results">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="teamawesome.cs180frontend.Activities.Application.SearchProfessorResultsActivity">

        <!--<android.support.v4.view.ViewPager-->
            <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
            <!--android:id="@+id/professor_tab"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

            <!--<TextView-->
                <!--android:id="@+id/search_professor_n"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text=""/>-->

        <TextView
            android:id="@+id/search_professor_university"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />

        <!--Rating-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_horizontal_margin">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/prof_rate_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:text="@string/rating_icon" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/prof_rate_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:text="@string/rating_icon" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/prof_rate_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:text="@string/rating_icon" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/prof_rate_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:text="@string/rating_icon" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/prof_rate_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:gravity="center_horizontal"
                android:textSize="30sp"
                android:text="@string/rating_icon" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:text="@string/search_professor_results_classes" />

        <ListView
            android:id="@+id/search_professor_class_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

        <ListView
            android:id="@+id/search_professor_school_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

        <Button
            android:id="@+id/search_professor_reviews_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:padding="10dp"
            android:background="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:text="@string/search_professor_results_review" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>