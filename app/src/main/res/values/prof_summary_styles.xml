<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StarsPerRatingTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SmallStarTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textSize">8sp</item>
        <item name="android:text">@string/fa_star</item>
    </style>

    <style name="BarTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">18dp</item>
    </style>

    <style name="RatingCountTextViewTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>