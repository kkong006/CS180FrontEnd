<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WhiteTextTheme">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textCursorDrawable">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="backgroundTint">@color/colorWhite</item>
    </style>

    <style name="VerifyButtonTheme">
        <item name="android:background">@color/colorDarkRed</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="RatingIconTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">@string/fa_star</item>
    </style>

    <style name="ReviewRatingIconTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:text">@string/fa_star</item>
    </style>

    <style name="FeedRatingIconTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/fa_star</item>
    </style>

    <style name="WriteReviewStarTheme">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:text">@string/fa_star</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
